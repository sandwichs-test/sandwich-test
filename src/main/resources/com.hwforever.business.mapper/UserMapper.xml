<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hwforever.business.mapper.UserMapper">
	<resultMap id="uRM" type="com.hwforever.business.model.User">
		<id column="u.id" property="id"/>
		<result column="u.username" property="username"/>
		<result column="u.password" property="password"/>
		<result column="u.email" property="email"/>
		<result column="u.loginstr" property="loginstr"/>
	</resultMap>

	<sql id="allUserColumn">
		u.username `u.username`,
		u.password `u.password`,
		u.email `u.email`,
		u.loginstr `u.loginstr`
	</sql>

	<select id="selectUserByUsername" parameterType="java.lang.String" resultMap="uRM">
		SELECT
		u.id `u.id`,
		<include refid="allUserColumn"/>
		FROM user u
		WHERE u.username = #{0}
	</select>

	<select id="selectUserById" parameterType="java.lang.Integer" resultMap="uRM">
		SELECT
		u.id `u.id`,
		<include refid="allUserColumn"/>
		FROM user u
		WHERE u.id = #{1}
	</select>

	<insert id="insertUser" parameterType="com.hwforever.business.model.User" useGeneratedKeys="true" keyProperty="id"
			keyColumn="id">
		INSERT INTO user(
		`username`,
		`password`,
		`email`)
		VALUES (
		#{username},
		#{password},
		#{email}
		)
	</insert>

	<update id="updateUser"   parameterType="com.hwforever.business.model.User">
		UPDATE user SET
		`username` = #{username},
		`password` = #{password},
		`email` = #{email},
		`loginstr` = #{loginstr}
		WHERE id = #{id}
	</update>

	<select id="getUser" parameterType="java.util.Map"  resultType="com.hwforever.business.model.User">
		SELECT 
		username `username`,
		password `password`,
		email `email`
		FROM USER 
		WHERE 1=1
		<if test="username != null">
            AND username = #{username}
        </if>
        <if test="password != null">
            AND password = #{password}
        </if>
        <if test="email != null">
            AND email = #{email}
        </if>
	</select>
	<select id="getAllUsers"  resultType="com.hwforever.business.model.User">
		SELECT 
		username `username`,
		password `password`,
		email `email`
		FROM USER 
		WHERE 1=1
		GROUP BY username
	</select>
	
	<select id="findUser"  resultType="com.hwforever.business.model.User" parameterType="com.hwforever.business.model.User">
		SELECT 
		username `username`,
		password `password`,
		email `email`
		FROM USER 
		WHERE 1=1 
		<if test="username != null and username != '' ">
            AND username like CONCAT(CONCAT('%', #{username}), '%') 
        </if>
        <if test="email != null and email !='' ">
            AND email like CONCAT(CONCAT('%', #{email}), '%') 
        </if>
        <if test="null != password and '' != password ">
            AND password like CONCAT(CONCAT('%', #{password}), '%') 
        </if>
        GROUP BY username
	</select>

</mapper>